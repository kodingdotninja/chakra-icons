{
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "css.validate": false,
  "eslint.workingDirectories": [
    { "!cwd": false, "directory": "packages/create-chakra-icons" },
    { "!cwd": false, "pattern": "packages/@chakra-icons/*" },
    { "!cwd": false, "pattern": "templates/*" },
    { "!cwd": false, "pattern": "tooling/*" },
    { "!cwd": false, "directory": "website" }
  ],
  "npm.packageManager": "pnpm"
}
