{
  "extends": "@packages/tsconfig/base.json",
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve"
  }
}
