{
  "name": "website",
  "version": "0.0.0",
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "next build",
    "clean": "shx rm -rf .next/",
    "dev": "next",
    "export": "next export",
    "lint": "eslint --fix \"**/*.{js,cjs,mjs,jsx,ts,tsx}\" && tsc --noEmit --pretty",
    "vercel-build": "cd ../.. && yarn build:website",
    "#": "-------------------------------------------------------------------"
  },
  "dependencies": {},
  "devDependencies": {
    "@packages/tsconfig": "*",
    "eslint": "^8",
    "eslint-config-kdnj": "^2"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "yarn workspace website prettier --write"
    ],
    "**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "yarn workspace website eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
