{
  "name": "@kodingdotninja/chakra-icons",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "packages/@chakra-icons/*",
    "website",
    "!website/**",
    "!packages/@chakra-icons/cli/**",
    "!packages/@chakra-icons/core/**",
    "!packages/msrconfig/**",
    "!packages/tsconfig/**"
  ],
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "turbo run build",
    "commit": "commit",
    "clean": "turbo run clean",
    "postclean": "rimraf **/node_modules",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "lint": "turbo run lint",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "purge": "shx rm -rf node_modules/.cache/ packages/**/.turbo/ website/.turbo/",
    "release": "multi-semantic-release",
    "test": "turbo run test",
    "# scope commands": "----------------------------------------------------",
    "website": "yarn workspace website",
    "chakra-icons": "yarn workspace chakra-icons",
    "cli": "yarn workspace @chakra-icons/cli",
    "core": "yarn workspace @chakra-icons/core",
    "#": "-------------------------------------------------------------------"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "globalDependencies": [
      "patches/**",
      "yarn.lock"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**",
          "dist/**",
          ".chakraIcons/**"
        ]
      },
      "clean": {
        "cache": false
      },
      "format": {
        "cache": false
      },
      "lint": {
        "dependsOn": [
          "^lint"
        ]
      },
      "test": {
        "cache": false
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16",
    "@commitlint/config-conventional": "^16",
    "@commitlint/prompt-cli": "^16",
    "@types/babel-types": "^7",
    "@types/babel__generator": "^7",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "husky": "^7",
    "lint-staged": "^12",
    "multi-semantic-release": "^2",
    "patch-package": "^6",
    "postinstall-postinstall": "^2",
    "shx": "^0",
    "turbo": "^1"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "private": true
}
