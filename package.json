{
  "name": "@kodingdotninja/chakra-icons",
  "version": "0.0.0",
  "workspaces": [
    "tooling/*",
    "packages/*",
    "packages/@chakra-icons/*",
    "website",
    "!website/**",
    "!tooling/cli/**",
    "!tooling/*.conf/**"
  ],
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clear": "yarn clean",
    "postclear": "rimraf **/node_modules",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "lint": "turbo run lint",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "purge": "shx rm -rf node_modules/.cache/ packages/**/.turbo/ website/.turbo/",
    "release": "multi-semantic-release",
    "commit": "commit",
    "# scope commands": "----------------------------------------------------",
    "website": "yarn workspace website",
    "cci": "yarn workspace create-chakra-icons",
    "cli": "yarn workspace @tooling/cli",
    "plop": "plop",
    "postplop": "yarn install",
    "#": "-------------------------------------------------------------------"
  },
  "devDependencies": {
    "@commitlint/cli": "^16",
    "@commitlint/config-conventional": "^16",
    "@commitlint/prompt-cli": "^16",
    "@types/babel-types": "^7",
    "@types/babel__generator": "^7",
    "@types/degit": "^2",
    "@types/glob": "^7",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "commitlint-config-squash-pr": "^1",
    "husky": "^7",
    "lint-staged": "^12",
    "multi-semantic-release": "^2",
    "patch-package": "^6",
    "plop": "^3",
    "postinstall-postinstall": "^2",
    "shx": "^0",
    "turbo": "^1"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "private": true,
  "packageManager": "yarn@1.22.17"
}
