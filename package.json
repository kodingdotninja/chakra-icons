{
  "name": "@kodingdotninja/chakra-icons",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "website",
    "!website/**",
    "!packages/tsconfig/**",
    "!packages/chakra-icons/**",
    "!packages/msrconfig/**"
  ],
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "prepare": "husky install",
    "purge": "shx rm -rf node_modules/.cache/ packages/**/.turbo/ website/.turbo/",
    "validate": "turbo run validate",
    "release": "multi-semantic-release",
    "commit": "commit",
    "# scope commands": "----------------------------------------------------",
    "chakra-icons": "yarn workspace chakra-icons",
    "#": "-------------------------------------------------------------------"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "globalDependencies": [
      "yarn.lock"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "cache": false
      },
      "clean": {
        "cache": false
      },
      "git:pre-commit": {
        "cache": false
      },
      "validate": {
        "dependsOn": [
          "^validate"
        ]
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@commitlint/prompt-cli": "16.0.0",
    "husky": "^7",
    "lint-staged": "^12",
    "multi-semantic-release": "2.11.0",
    "patch-package": "^6",
    "postinstall-postinstall": "^2",
    "shx": "^0",
    "turbo": "^1"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "private": true
}
